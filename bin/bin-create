#!/bin/sh

# Create a new rfc
#   Version: 1.0.0
#   Author: Yoshua Wuyts <yoshuawuyts@gmail.com>
#   License: MIT

# print usage information
usage() {
cat << EOF
  Usage: rfc-create

  Options:

    -h, --help  output usage information

  Examples:

    $ rfc-create > my-rfc.md
EOF
}

# assert arguments
[ $# -ne 0 ] && usage && exit 1

# switch arguments
case $1 in
  -h|--help) usage; exit;;
esac

# find and replace
cat << EOF
#!/bin/sh

# what_it_does
#   Version: 1.0.0
#   Author: Yoshua Wuyts <yoshuawuyts@gmail.com>
#   License: MIT

# print usage information
usage() {
cat << EOF
  Usage: rfc-create

  Options:

    -h, --help  output usage information

  Examples:

    $ rfc-create > my-rfc.md
\EOF
}

# assert arguments
[ $# -ne 0 ] && usage && exit 1

# switch arguments
case $1 in
  -h|--help) usage; exit;;
esac

# logic
EOF
